{
  "manifest_version": 3,
  "name": "TabTaskTick",
  "version": "1.3.25",
  "description": "Intelligent tab and task management with collections, rules engine, auto-grouping, and snoozing",
  "permissions": [
    "tabs",
    "tabGroups",
    "bookmarks",
    "storage",
    "alarms",
    "contextMenus",
    "downloads",
    "notifications",
    "windows",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background-integrated.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "commands": {
    "quick_snooze": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Quick snooze current tab"
    },
    "group_by_domain": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Group all tabs by domain"
    },
    "close_duplicates": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Close duplicate tabs"
    }
  },
  "side_panel": {
    "default_path": "sidepanel/panel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "services/*/*.js",
        "test-page.html"
      ],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ]
}
